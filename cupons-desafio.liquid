      },

	  {
        "id": "botaoCupom",
        "type": "text",
        "label": "Botão",
        "default": "Ir para o catálogo!"
      },



	  {
        "id": "inicioCupom",
        "type": "text",
        "label": "Topo do Cupom",
        "default": "Cupom de"
      },
      {
        "id": "porcentagemCupom",
        "type": "text",
        "label": "Porcentagem do Cupom",
        "default": "5%"
      },
      {
        "id": "tipoDeDescontoCupom",
        "type": "text",
        "label": "Tipo de Desconto",
        "default": "de desconto para compras apenas no cartão de crédito"
      },
      {
        "id": "validadeCupom",
        "type": "text",
        "label": "Validade",
        "default": "Validade de 5 dias"
      },
      {
        "id": "codigoCupom",
        "type": "text",
        "label": "Código",
        "default": "USE: CUPOM5"
      }
    ],

   "name": "Cupons",
   "tag": "section",
   "class": "spaced-section",
   "max_blocks": 4,
