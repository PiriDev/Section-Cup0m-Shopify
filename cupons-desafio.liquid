      {% for block in section.blocks %}
		{% assign item = block.settings %}
      
        <div class="cards-cupom">
          <p for="{{forloop.index}}"> {{section.settings.inicioCupom}} </p>
          <h1 for="{{forloop.index}}"> {{section.settings.porcentagemCupom}} </h1>
          <p class="texto-bottom-cupom" for="{{forloop.index}}"> {{section.settings.tipoDeDescontoCupom}} </p>
          <p class="validade-cupom" for="{{forloop.index}}"> {{section.settings.validadeCupom}} </p>
          <h2 class="codigo-cupom" for="{{forloop.index}}"> {{section.settings.codigoCupom}} </h2>
        </div> <!--cards-cupom-->
      
      {% endfor %}
      
   

